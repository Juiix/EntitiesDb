<#@ template language="C#" #>
<#@ output extension=".cs" #>
<#@ import namespace="System.Text" #>
<#@ include file="Generics.ttinclude" #>
namespace EntitiesDb;

public partial class EntityDatabase
{
<#
	for (int index = 2; index <= GenericCount; index++)
	{
        var generics = Generics(index);
		var parameters = FormatComma(index, "in T{0}? t{0}Component = default");
		var sets = FormatLine(index, "if (!ComponentMeta<T{0}>.IsZeroSize) chunk.Write<T{0}>(entityReference.Slot.Index) = t{0}Component;");
#>
	/// <inheritdoc cref="Add{T0}(Entity, in T0)"/>
	[StructuralChange]
	[ChunkChange]
	public void Add<<#= generics #>>(Entity entity, <#= parameters #>)
	{
		var addedSignature = ComponentSingle<<#= generics #>>.Signature;
		ref var entityReference = ref GetEntity(entity);

		var srcArchetype = entityReference.Archetype;
        var dstSignature = srcArchetype.Signature.Or(in addedSignature);
		var dstArchetype = Archetypes.GetOrCreateArchetype(dstSignature);

		// move entity to new archetype
		MoveEntity(entity.Id, ref entityReference, srcArchetype, dstArchetype);

		// set component value
		ref readonly var chunk = ref dstArchetype.GetChunk(entityReference.Slot.ChunkIndex);
		<#= Indent(sets, 8) #>
	}
	/// <inheritdoc cref="Add{T0}(int, in T0)"/>
	[StructuralChange]
	[ChunkChange]
	public void Add<<#= generics #>>(int entityId, <#= parameters #>)
	{
		var addedSignature = ComponentSingle<<#= generics #>>.Signature;
		ref var entityReference = ref GetEntity(entityId);

		var srcArchetype = entityReference.Archetype;
        var dstSignature = srcArchetype.Signature.Or(in addedSignature);
		var dstArchetype = Archetypes.GetOrCreateArchetype(dstSignature);

		// move entity to new archetype
		MoveEntity(entityId, ref entityReference, srcArchetype, dstArchetype);

		// set component value
		ref readonly var chunk = ref dstArchetype.GetChunk(entityReference.Slot.ChunkIndex);
		<#= Indent(sets, 8) #>
	}
<#
	}
#>
}